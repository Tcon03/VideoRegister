<Application x:Class="Register1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Register1"
              xmlns:Icon ="http://metro.mahapps.com/winfx/xaml/iconpacks"
             StartupUri="View/VideoRegister.xaml">
    <Application.Resources>
        <!--Property Button Main-->
        <Style TargetType="Button" x:Key="btnClick">

            <Setter Property="FontSize" Value="15"/>
            <Setter Property="MaxHeight" Value="50"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Background" Value="#686DF4"/>
            <Setter Property="FontFamily" Value="\font\nexa"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                          CornerRadius="15"
                          Padding="15">

                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>

            </Setter>
            <Style.Triggers >
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightPink"/>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="#4F9CAC "/>
                </Trigger>
            </Style.Triggers>
        </Style>



        <Style x:Key ="btnUpLoad"  BasedOn="{StaticResource btnClick}"  TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="#AAD922"/>

            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key ="btnReject"  BasedOn="{StaticResource btnClick}"  TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>





        <Style x:Key="icon" TargetType="Icon:PackIconMaterial">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10"/>
            <Style.Triggers >
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightPink"/>
                </Trigger>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="#4F9CAC "/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
