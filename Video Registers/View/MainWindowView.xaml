<Window x:Class="Video_Registers.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Video_Registers.View"
       xmlns:Icon ="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:vm ="clr-namespace:Video_Registers.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        x:Name="_this"
        Icon="/Image/FaceIcon.png"
        Title="Video Register" Height="720" Width="1280">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button 
                    Name="upLoad"
                    Margin="10 10 0 0"
                Command="{Binding UploadCommand}"
                CommandParameter="{ Binding ElementName=_this}"
                    Style="{StaticResource btnUpLoad }">
                <StackPanel Orientation="Horizontal">
                    <Icon:PackIconMaterial 
                            Kind="Upload"
                            VerticalAlignment="Center"
                            Margin="0 0 10 0"/>
                    <TextBlock Text="Upload Video " 
                               FontSize="16"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Border Background="LightGray"
                    Grid.Row="1"
                    Margin="10"
                    CornerRadius="20">
                <Grid Margin="10" >

                    <MediaElement 
                               Name="videoPlayer"
                               Width="auto"
                               LoadedBehavior="Manual"
                               Source="{Binding VideoSource}"
                               Volume="{Binding Volume, Mode=TwoWay}"
                               IsMuted="{Binding IsMuted, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding IsPlaying}" Value="true">
                                <i:CallMethodAction TargetObject="{Binding ElementName=videoPlayer}"
                                                    MethodName="Play"/>
                            </i:DataTrigger>
                            <i:DataTrigger Binding="{Binding IsPlaying}" Value="false">
                                <i:CallMethodAction TargetObject="{Binding ElementName=videoPlayer}"
                                                    MethodName="Pause"/>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        
                        
                    </MediaElement>

                    <StackPanel VerticalAlignment="Bottom" 
                                HorizontalAlignment="Center" 
                                Orientation="Horizontal">

                        <!--<Icon:PackIconMaterial Kind="Play" 
                                                   Style="{StaticResource icon}"/>-->
                        <Button Command="{Binding PlayPauseCommand}"
                                Style="{StaticResource btnIcon}"
                                Margin="0 10 5 0"
                                ToolTip="Play/Pause">
                            <Icon:PackIconMaterial>
                                <Icon:PackIconMaterial.Style>
                                    <Style TargetType="Icon:PackIconMaterial" BasedOn="{ StaticResource icon}">
                                        <Setter Property="Kind" Value="Play"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                <Setter Property="Kind" Value="Pause"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Icon:PackIconMaterial.Style>
                            </Icon:PackIconMaterial>
                        </Button>

                        <Slider Margin="0 20 0 0"
                                TickPlacement="BottomRight"
                                Maximum="10"
                                TickFrequency="1"
                                Width="100"
                                Value="{Binding Volume, Mode=TwoWay}" />

                        <TextBox Text="{Binding Volume, Mode=OneWay, StringFormat='F0'}"
                                 IsReadOnly="True">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="DemiBold"/>
                                    <Setter Property="Width" Value="40"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="5 10 0 0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="White"
                                                        BorderThickness="0"
                                                        CornerRadius="5">

                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                </Grid>
            </Border>

        </Grid>



        <GridSplitter 
               Grid.Column="1"
               HorizontalAlignment="Stretch"
               Margin="1 20 0 10"
               Background="LightPink">
        </GridSplitter>

        <Grid>

        </Grid>
























    </Grid>
</Window>
