<Window x:Class="Video_Registers.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Video_Registers.View"
       xmlns:Icon ="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:vm ="clr-namespace:Video_Registers.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        x:Name="_this"
        Icon="/Image/FaceIcon.png"
        Title="Video Register" Height="720" Width="1280">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverterLoaded"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">

                <Button 
                    Margin="10 10 0 0"
                    Command="{Binding UploadCommand}"
                    CommandParameter="{ Binding ElementName=_this}"
                    Style="{StaticResource btnUpLoad }">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial 
                            Kind="Upload"
                            VerticalAlignment="Center"
                            Margin="0 0 10 0"/>
                        <TextBlock Text="Upload Video " 
                               FontSize="16"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button 
                    Margin="10 10 0 0"
                    Command="{Binding ClearCommand}"
                    CommandParameter="{ Binding ElementName=_this}"
                    Style="{StaticResource btnclear }">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial 
                            Kind="Delete"
                            VerticalAlignment="Center"
                            Margin="0 0 10 0"/>
                        <TextBlock Text="Clear " 
                               FontSize="16"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>


            <Border Background="LightGray"
                    Grid.Row="1"
                    Margin="10"
                    CornerRadius="20">
                <Grid Margin="10" >

                    <MediaElement 
                               Name="videoPlayer"
                               Stretch= "Uniform"
                               LoadedBehavior="Manual"
                               Source="{Binding VideoSource}"
                               Volume="{Binding Volume, Mode=TwoWay}"
                               IsMuted="{Binding IsMuted, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                <i:CallMethodAction TargetObject="{x:Reference videoPlayer}" MethodName="Play"/>
                            </i:DataTrigger>
                            <i:DataTrigger Binding="{Binding IsPlaying}" Value="False">
                                <i:CallMethodAction TargetObject="{x:Reference videoPlayer}" MethodName="Pause"/>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                    </MediaElement>

                    <StackPanel VerticalAlignment="Bottom" 
                                HorizontalAlignment="Center" 
                                Visibility="{Binding IsLoaded ,Converter={StaticResource BoolToVisConverterLoaded}}"
                                Orientation="Horizontal">
                        <Button Command="{Binding PlayPauseCommand}"
                                Style="{StaticResource btnIcon}"
                                 Margin="5 0 5 0"
                                ToolTip="Play/Pause">
                            <Icon:PackIconMaterial>
                                <Icon:PackIconMaterial.Style>
                                    <Style TargetType="Icon:PackIconMaterial" BasedOn="{ StaticResource icon}">
                                        <Setter Property="Kind" Value="Play"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                <Setter Property="Kind" Value="Pause"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Icon:PackIconMaterial.Style>
                            </Icon:PackIconMaterial>
                        </Button>
                        <TextBlock 
                                   Name="timeDisplay"
                                   Margin="5 0 5 0"
                                   FontSize="15"
                                   FontWeight="DemiBold"
                                   VerticalAlignment="Center" />

                        <Button  Margin="5 0 5 0"
                                 Click="Rewind_Click"
                                 IsEnabled="{Binding IsLoaded}"
                                 Style="{StaticResource btnIcon}">
                            <Icon:PackIconMaterial Kind="Rewind10"
                                                   Style="{StaticResource icon}"/>
                        </Button>

                        <Button Style="{StaticResource btnIcon}"
                                Command="{Binding MuteCommand}"
                                CommandParameter="{Binding ElementName=_this}"
                                Margin="5 0 5 0">
                            <Icon:PackIconMaterial>
                                <Icon:PackIconMaterial.Style>
                                    <Style BasedOn="{StaticResource icon}" TargetType="Icon:PackIconMaterial">
                                        <Setter Property="Kind" 
                                                Value="VolumeHigh"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                                <Setter Property="Kind" Value="VolumeOff"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Icon:PackIconMaterial.Style>
                            </Icon:PackIconMaterial>
                        </Button>

                        <Slider Margin="5 12 0  0"
                                TickPlacement="BottomRight"
                                Maximum="10"
                                TickFrequency="1"
                                Width="100"
                                Value="{Binding Volume, Mode=TwoWay}" />

                        <TextBox Text="{Binding Volume, Mode=OneWay, StringFormat='F0'}"
                                 VerticalAlignment="Center"
                                 FontSize="20"
                                 Margin="5 5 0 0"
                                 Width="30"
                                 IsReadOnly="True">

                        </TextBox>
                    </StackPanel>

                </Grid>
            </Border>

        </Grid>



        <GridSplitter 
               Grid.Column="1"
               HorizontalAlignment="Stretch"
               Margin="1 20 0 10"
               Background="LightPink">
        </GridSplitter>

        <Grid Grid.Column="2">
            <WrapPanel Margin="15" Grid.Row="0">
                <!--button item 1-->
                
                <Button Name="genImage"
                        Command="{Binding GenerateFramesCommands}"
                        CommandParameter="{Binding ElementName=_this}"
                        Style="{StaticResource  btnGenerate}" >

                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial 
                                Kind="ImageArea" 
                                 Foreground="White"
                                Height="15" 
                                VerticalAlignment="Center"
                                Width="20" />

                        <TextBlock
                            Name="disPlay"
                            Foreground="White"
                            Text="Generate Image" 
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"/>
                    </StackPanel>

                </Button>

                <!--item 2-->
                <Label Content="Tần số lấy ảnh "
                       VerticalAlignment="Center"
                       Margin="10 0 0 0"
                       FontSize="13"/>

                <!--item 3 điều chỉnh tốc độ-->
                <toolkit:DoubleUpDown 
                         Increment="1"  
                          Width="50"
                          Height="40"
                          Minimum="1"
                          Value="{Binding FrameInterval, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                          Maximum="10"
                          FontSize="15"/>
                <Label Content=" giây/1 ảnh  "
                       VerticalAlignment="Center"
                       Margin="0 0 0 0"
                       FontSize="13"/>


            </WrapPanel>
        </Grid>

    </Grid>
</Window>
