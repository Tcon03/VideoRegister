<Window x:Class="Video_Registers.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Video_Registers.View"
       xmlns:icon ="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:vm ="clr-namespace:Video_Registers.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        x:Name="_this"
        Icon="/Image/FaceIcon.png"
        Title="Video Register" Height="720" Width="1280">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button 
                    Name="upLoad"
                    Margin="10 10 0 0"
                Command="{Binding UploadCommand}"
                CommandParameter="{ Binding ElementName=_this}"
                    Style="{StaticResource btnUpLoad }">
                <StackPanel Orientation="Horizontal">
                    <icon:PackIconMaterial 
                            Kind="Upload"
                            VerticalAlignment="Center"
                            Margin="0 0 10 0"/>
                    <TextBlock Text="Upload Video " 
                               FontSize="16"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Border Background="LightGray"
                    Grid.Row="1"
                    CornerRadius="20">
                <Grid Margin="10" >
                    <MediaElement Name="videoPlayer"
                       Width="auto"
                       LoadedBehavior="Manual"
                       Source="{Binding VideoSource}"
                       Volume="{Binding Volume, Mode=TwoWay}"
                       IsMuted="{Binding IsMuted, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                <i:CallMethodAction TargetObject="{Binding ElementName=videoPlayer}" MethodName="Play"/>
                            </i:DataTrigger>
                            <i:DataTrigger Binding="{Binding IsPlaying}" Value="False">
                                <i:CallMethodAction TargetObject="{Binding ElementName=videoPlayer}" MethodName="Pause"/>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                    </MediaElement>
                </Grid>
            </Border>

        </Grid>



        <GridSplitter 
               Grid.Column="1"
               HorizontalAlignment="Stretch"
               Margin="1 20 0 10"
               Background="LightPink">
        </GridSplitter>

        <Grid>

        </Grid>
























    </Grid>
</Window>
